

<form action="/teams" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new Team:</p>
    <%= form_with model: @team, class: "team_form" do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %><br>


    <div id = "in_playoffs">

      <%= f.label :in_playoffs %>
      <%= f.select :remote, options_for_select([true, false]), class: 'form-control' %><br>
    </div>

      <%= f.label :total_wins %>
      <%= f.number_field :total_wins %><br>

      <%= f.label :city %>
      <%= f.text_field :city %><br>

      <%= f.label :home_arena %>
      <%= f.text_field :home_arena %><br>

      <%= f.submit %>
    <% end %>
</form>
